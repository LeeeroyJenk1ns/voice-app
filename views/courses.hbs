<h1>{{title}}</h1>

{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-image">
                <img src="{{img}}" alt="{{title}}">
                <span class="card-title" id="title-cardGl">{{title}}</span>
            </div>
            <div class="card-content">
                <p class="price">{{price}}</p>
            </div>
            <div class="card-action">
                <a href="/courses/{{id}}" target="_blank"><button class="btn btn-primary" name="{{title}}">Открыть</button></a>
                <a href="/courses/{{id}}/edit?allow=true" target="_blank"><button class="btn btn-primary">Редактировать</button></a>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p>Тут пусто</p>
{{/if}}